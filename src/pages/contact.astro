---
import Navbar from "../components/Navbar.astro";
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Contact">
    <body>
        <Navbar />
        <main>
            <img src="/crt_red_mask.png" class="crt-mask" />
            <h1>Contact Me!</h1>
            <h3>Feel free to get in touch to ask any questions. I don't mind!</h3>
            <div class="main-contact-content">
                <table>
                    <tr>
                        <th>Contact Method</th>
                        <th>Identifier</th>
                    </tr>
                    <tr>
                        <td>Email</td>
                        <td><a class="link" href="mailto:contact@wearr.dev">contact@wearr.dev</a></td>
                    </tr>
                    <tr>
                        <td>Discord</td>
                        <td>wearr.</td>
                    </tr>
                    <tr>
                        <td>Misskey</td>
                        <td><a class="link" href="https://gensokyou.com/@wearr" target="_blank" rel="noopener noreferrer">@wearr@gensokyou.com</a></td>
                    </tr>
                </table>
            </div>
            <h3 class="warning-text"><b>If you send spam emails or messages, you will be blocked immediately.</b></h3>
        </main>
        <Footer />
    </body>
</Layout>
