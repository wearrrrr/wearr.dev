---
const { title, description, button } = Astro.props;
---

<div class="service-card">
    <h2 class="service-title">{title}</h2>
    <div class="service-description">{description}</div>
    <a class="service-button" href={button}>Get Started</a>
</div>

<style>
    .service-card {
        width: 250px;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        border: 2px solid rgb(235, 235, 235);
        border-radius: 10px;
        font-size: 100%;
        margin: 0.5rem;
    }
    .service-title {
        text-align: center;
        font-size: 24px;
        height: 80px;
    }
    .service-description {
        text-align: center;
        max-width: 90%;
        max-height: 350px;
        display: -webkit-box;
        -webkit-line-clamp: 6;
        -webkit-box-orient: vertical;
        margin-bottom: 10px;
        overflow: hidden;
    }
    .service-button {
        padding-inline: 4px;
        padding-top: 8px;
        padding-bottom: 8px;
        background-color: rgb(239, 124, 124);
        color: #fff;
        text-decoration: none;
        transition: 250ms ease-in-out;
        text-align: center;
        width: 100%;
    }
    .service-button:hover {
        background-color: rgb(254, 112, 112);
    }
</style>
